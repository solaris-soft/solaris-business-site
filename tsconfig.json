{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "verbatimModuleSyntax": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "strictNullChecks": true
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "node_modules/svelte/types/runtime"
  ],
  "exclude": ["dist", "node_modules", "**/*.svelte"]
}
