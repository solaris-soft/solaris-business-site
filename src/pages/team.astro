---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import samActionshot from '../assets/sam-actionshot.webp';

const teamCollection = await getCollection('team');
const teamMembers = teamCollection.map(member => member.data); // Map over collection items to get data

---

<Layout 
  title="Our Development Team | Solaris Software"
  description="Meet the expert web developers and software engineers behind SOLARIS SOFTWARE. Joshua Macmaster and Sam Frahm lead our Perth-based team in delivering innovative digital solutions."
  keywords="web development team Perth, software engineers Western Australia, Joshua MacMaster, Samuel Frahm, Perth tech team, custom software developers"
  type="profile"
  category="Team"
>
    <main class="pt-24 min-h-screen bg-black relative overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-5">
            <div class="absolute top-20 left-10 w-64 h-64 bg-orange-400 rounded-full blur-3xl"></div>
            <div class="absolute bottom-20 right-10 w-96 h-96 bg-orange-600 rounded-full blur-3xl"></div>
        </div>
        
        <!-- Subtle Grid Pattern -->
        <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,159,67,0.3) 1px, transparent 0); background-size: 60px 60px;"></div>

        <!-- Hero Section with Sam's Action Shot -->
        <section class="relative z-10 py-16 md:py-24">
            <div class="container mx-auto px-4 sm:px-6 md:px-8 max-w-7xl">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
                    <!-- Text Content -->
                    <div class="text-center lg:text-left">
                        <h1 class="font-black relative mb-6">
                            <span class="animate-slideFromLeft inline-block">Meet Our</span>
                            <div class="bg-gradient-to-r from-[#ff3d00] to-[#ff8a00] bg-clip-text text-transparent animate-slideFromRight inline-block ml-4">
                                Team
                            </div>
                        </h1>

                        <p class="text-[clamp(1.1rem,1.5vw,1.3rem)] text-white/70 leading-relaxed max-w-[60ch] relative py-8 opacity-0 animate-slideUp mx-auto lg:mx-0">
                            A <span class="font-bold text-orange-400">lawyer</span> and <span class="font-bold text-orange-400">psychology graduate</span> turned self-taught programmers. We bring a different way of thinking about business solutions drawing from our backgrounds in law and psychology.
                        </p>

                        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mt-8">
                            <div class="flex items-center gap-3 px-6 py-3 bg-orange-400/10 border border-orange-400/20 rounded-lg">
                                <div class="w-2 h-2 bg-orange-400 rounded-full"></div>
                                <span class="text-orange-400 font-medium">Perth-based</span>
                            </div>
                            <div class="flex items-center gap-3 px-6 py-3 bg-orange-400/10 border border-orange-400/20 rounded-lg">
                                <div class="w-2 h-2 bg-orange-400 rounded-full"></div>
                                <span class="text-orange-400 font-medium">Self-taught programmers</span>
                            </div>
                        </div>
                    </div>

                    <!-- Hero Image -->
                    <div class="relative">
                        <div class="relative overflow-hidden rounded-2xl">
                            <!-- Image with black and white filter -->
                            <Image
                                src={samActionshot}
                                alt="Sam Frahm in action - working on software development"
                                class="w-full h-auto grayscale hover:grayscale-0 transition-all duration-500 transform hover:scale-105"
                                width={600}
                                height={400}
                            />
                            <!-- Overlay gradient -->
                            <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent"></div>
                        </div>
                        <!-- Floating stats -->
                        <div class="absolute -bottom-6 -left-6 bg-gray-900/90 backdrop-blur-sm border border-gray-800 rounded-lg p-4">
                            <div class="text-center">
                                <div class="text-2xl font-bold text-orange-400">3</div>
                                <div class="text-sm text-gray-400">Team Members</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Our Philosophy Section -->
        <section class="py-16 md:py-20 relative z-10">
            <div class="container mx-auto px-4 sm:px-6 md:px-8 max-w-6xl">
                <div class="text-center mb-16">
                    <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
                        Our <span class="bg-gradient-to-r from-orange-400 to-orange-600 bg-clip-text text-transparent">Philosophy</span>
                    </h2>
                    <p class="text-xl text-gray-300 max-w-3xl mx-auto leading-relaxed">
                        We believe great software comes from understanding both technology and human behavior. Our diverse backgrounds create solutions that work intuitively.
                    </p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-16">
                    <div>
                        <h3 class="text-2xl font-bold text-white mb-6">From Different Worlds, Same Vision</h3>
                        <p class="text-gray-300 mb-6 leading-relaxed">
                            Our journey into software development wasn't traditional. A lawyer who understands process and compliance, 
                            a psychology graduate who grasps human behavior, and a mechanical engineering student who thinks in systems. 
                            This unique combination allows us to build software that not only works technically but makes sense to people.
                        </p>
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div class="bg-orange-400/5 border border-orange-400/10 rounded-lg p-4">
                                <h4 class="text-orange-400 font-semibold mb-2">Legal Precision</h4>
                                <p class="text-gray-400 text-sm">Understanding compliance, contracts, and business processes</p>
                            </div>
                            <div class="bg-orange-400/5 border border-orange-400/10 rounded-lg p-4">
                                <h4 class="text-orange-400 font-semibold mb-2">Psychology Insights</h4>
                                <p class="text-gray-400 text-sm">User behavior analysis and cognitive design principles</p>
                            </div>
                            <div class="bg-orange-400/5 border border-orange-400/10 rounded-lg p-4">
                                <h4 class="text-orange-400 font-semibold mb-2">Engineering Logic</h4>
                                <p class="text-gray-400 text-sm">Systems thinking and problem-solving methodology</p>
                            </div>
                            <div class="bg-orange-400/5 border border-orange-400/10 rounded-lg p-4">
                                <h4 class="text-orange-400 font-semibold mb-2">Self-Taught Agility</h4>
                                <p class="text-gray-400 text-sm">Rapid learning and adaptation to new technologies</p>
                            </div>
                        </div>
                    </div>
                    <div class="relative">
                        <div class="bg-gradient-to-br from-gray-900 to-gray-800 rounded-2xl p-8 border border-gray-700">
                            <div class="mb-6">
                                <svg class="w-12 h-12 text-orange-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                                </svg>
                            </div>
                            <blockquote class="text-white text-lg font-medium mb-4">
                                "The best solutions come from understanding the problem from multiple perspectives."
                            </blockquote>
                            <cite class="text-orange-400 text-sm">â€” Our team philosophy</cite>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-8 text-center hover:border-orange-400/30 transition-all duration-300 group">
                        <div class="w-16 h-16 bg-orange-400/10 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-orange-400/20 transition-colors duration-300">
                            <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-white mb-4">Innovative Thinking</h3>
                        <p class="text-gray-400">Drawing from diverse backgrounds in law, psychology, and engineering to approach problems from unique angles that others might miss.</p>
                    </div>

                    <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-8 text-center hover:border-orange-400/30 transition-all duration-300 group">
                        <div class="w-16 h-16 bg-orange-400/10 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-orange-400/20 transition-colors duration-300">
                            <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-white mb-4">Rapid Development</h3>
                        <p class="text-gray-400">Self-taught expertise and systematic thinking enable quick iteration, efficient problem-solving, and faster time-to-market.</p>
                    </div>

                    <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-8 text-center hover:border-orange-400/30 transition-all duration-300 group">
                        <div class="w-16 h-16 bg-orange-400/10 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-orange-400/20 transition-colors duration-300">
                            <svg class="w-8 h-8 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-white mb-4">Human-Centered</h3>
                        <p class="text-gray-400">Psychology and legal backgrounds help us understand user behavior, compliance needs, and create intuitive, compliant experiences.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- How We Work Section -->
        <section class="py-16 md:py-20 relative z-10">
            <div class="container mx-auto px-4 sm:px-6 md:px-8 max-w-6xl">
                <div class="text-center mb-16">
                    <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
                        How We <span class="bg-gradient-to-r from-orange-400 to-orange-600 bg-clip-text text-transparent">Collaborate</span>
                    </h2>
                    <p class="text-xl text-gray-300 max-w-3xl mx-auto">
                        Our collaborative approach combines diverse perspectives to deliver exceptional results.  
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    <div class="text-center">
                        <div class="w-16 h-16 bg-orange-400/10 rounded-full flex items-center justify-center mx-auto mb-4 border border-orange-400/20">
                            <span class="font-bold text-orange-400 text-xl">1</span>
                        </div>
                        <h3 class="text-lg font-bold text-white mb-3">Discovery</h3>
                        <p class="text-gray-400 text-sm">We start by understanding your business processes, user needs, and technical requirements from legal, psychological, and engineering perspectives.</p>
                    </div>
                    
                    <div class="text-center">
                        <div class="w-16 h-16 bg-orange-400/10 rounded-full flex items-center justify-center mx-auto mb-4 border border-orange-400/20">
                            <span class="font-bold text-orange-400 text-xl">2</span>
                        </div>
                        <h3 class="text-lg font-bold text-white mb-3">Design</h3>
                        <p class="text-gray-400 text-sm">Sam applies psychological principles to user experience while Josh ensures legal compliance and process optimization in the design phase.</p>
                    </div>
                    
                    <div class="text-center">
                        <div class="w-16 h-16 bg-orange-400/10 rounded-full flex items-center justify-center mx-auto mb-4 border border-orange-400/20">
                            <span class="font-bold text-orange-400 text-xl">3</span>
                        </div>
                        <h3 class="text-lg font-bold text-white mb-3">Develop</h3>
                        <p class="text-gray-400 text-sm">Asten brings systematic thinking to the development process while all team members contribute to code quality and architecture decisions.</p>
                    </div>
                    
                    <div class="text-center">
                        <div class="w-16 h-16 bg-orange-400/10 rounded-full flex items-center justify-center mx-auto mb-4 border border-orange-400/20">
                            <span class="font-bold text-orange-400 text-xl">4</span>
                        </div>
                        <h3 class="text-lg font-bold text-white mb-3">Deploy</h3>
                        <p class="text-gray-400 text-sm">We ensure robust deployment with monitoring, compliance checks, and user feedback integration for continuous improvement.</p>
                    </div>
                </div>

                <div class="mt-16 bg-gradient-to-br from-gray-900/70 to-gray-900/30 border border-gray-700 rounded-2xl p-8">
                    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-center">
                        <div class="lg:col-span-2">
                            <h3 class="text-2xl font-bold text-white mb-4">Perth-Based, Globally Minded</h3>
                            <p class="text-gray-300 mb-4">
                                Based in Perth, Western Australia, we work with clients locally and internationally. 
                                Our diverse backgrounds help us understand different markets and regulatory environments.
                            </p>
                            <div class="flex flex-wrap gap-2">
                                <span class="px-3 py-1 bg-orange-400/10 text-orange-400 text-sm rounded-full border border-orange-400/20">Australian Business</span>
                                <span class="px-3 py-1 bg-orange-400/10 text-orange-400 text-sm rounded-full border border-orange-400/20">GDPR Compliant</span>
                                <span class="px-3 py-1 bg-orange-400/10 text-orange-400 text-sm rounded-full border border-orange-400/20">Agile Development</span>
                                <span class="px-3 py-1 bg-orange-400/10 text-orange-400 text-sm rounded-full border border-orange-400/20">24/7 Support</span>
                            </div>
                        </div>
                        <div class="text-center">
                            <div class="text-4xl font-bold text-orange-400 mb-2">100%</div>
                            <div class="text-gray-300">Client Satisfaction</div>
                            <div class="text-sm text-gray-400 mt-2">Based on project completion and client feedback</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Team Journey & Achievements Section -->
        <section class="py-16 md:py-20 relative z-10">
            <div class="container mx-auto px-4 sm:px-6 md:px-8 max-w-6xl">
                <div class="text-center mb-16">
                    <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
                        Our <span class="bg-gradient-to-r from-orange-400 to-orange-600 bg-clip-text text-transparent">Journey</span>
                    </h2>
                    <p class="text-xl text-gray-300 max-w-3xl mx-auto">
                        From law clerks and psychology graduates to building innovative software solutions for businesses worldwide.
                    </p>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-start">
                    <!-- Timeline -->
                    <div class="space-y-8">
                        <div class="flex gap-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-white mb-2">The Beginning</h3>
                                <p class="text-gray-300 mb-2">
                                    Josh started as a law clerk with 5 years of experience in legal processes and workflow optimization. 
                                    Sam pursued psychology, understanding human behavior and decision-making processes.
                                </p>
                                <div class="text-sm text-orange-400">2018-2022</div>
                            </div>
                        </div>

                        <div class="flex gap-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-white mb-2">Self-Taught Development</h3>
                                <p class="text-gray-300 mb-2">
                                    Recognizing the power of technology to solve business problems, Josh and Sam taught themselves programming. 
                                    Starting with basic web development, they quickly advanced to complex full-stack applications.
                                </p>
                                <div class="text-sm text-orange-400">2022-2023</div>
                            </div>
                        </div>

                        <div class="flex gap-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-white mb-2">SOLARIS Founded</h3>
                                <p class="text-gray-300 mb-2">
                                    Combining their unique backgrounds, Josh and Sam founded SOLARIS SOFTWARE. 
                                    Later joined by Asten, a mechanical engineering student who brought systematic thinking and fresh perspectives.
                                </p>
                                <div class="text-sm text-orange-400">2024</div>
                            </div>
                        </div>

                        <div class="flex gap-4">
                            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-orange-400 to-orange-600 rounded-full flex items-center justify-center">
                                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold text-white mb-2">Growing Impact</h3>
                                <p class="text-gray-300 mb-2">
                                    Today, we work with businesses across Western Australia, 
                                    delivering custom software solutions that combine technical excellence with human-centered design.
                                </p>
                                <div class="text-sm text-orange-400">2024-Present</div>
                            </div>
                        </div>
                    </div>

                    <!-- Stats & Achievements -->
                    <div class="space-y-8">
                        <div class="bg-gradient-to-br from-gray-900/70 to-gray-900/30 border border-gray-700 rounded-2xl p-8">
                            <h3 class="text-2xl font-bold text-white mb-6">Achievements & Impact</h3>
                            <div class="grid grid-cols-2 gap-6">
                                <div class="text-center">
                                    <div class="text-3xl font-bold text-orange-400 mb-2">8+</div>
                                    <div class="text-gray-300 text-sm">Projects Delivered</div>
                                </div>
                                <div class="text-center">
                                    <div class="text-3xl font-bold text-orange-400 mb-2">100%</div>
                                    <div class="text-gray-300 text-sm">On-Time Delivery</div>
                                </div>
                                <div class="text-center">
                                    <div class="text-3xl font-bold text-orange-400 mb-2">24/7</div>
                                    <div class="text-gray-300 text-sm">Support Available</div>
                                </div>
                            </div>
                        </div>

                        <div class="bg-gradient-to-br from-gray-900/70 to-gray-900/30 border border-gray-700 rounded-2xl p-8">
                            <h3 class="text-xl font-bold text-white mb-4">What Sets Us Apart</h3>
                            <div class="space-y-4">
                                <div class="flex items-start gap-3">
                                    <div class="w-2 h-2 bg-orange-400 rounded-full mt-2"></div>
                                    <div>
                                        <h4 class="text-white font-medium mb-1">Multi-Disciplinary Expertise</h4>
                                        <p class="text-gray-400 text-sm">Legal, psychological, and engineering backgrounds provide unique problem-solving approaches.</p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-3">
                                    <div class="w-2 h-2 bg-orange-400 rounded-full mt-2"></div>
                                    <div>
                                        <h4 class="text-white font-medium mb-1">Perth-Based Excellence</h4>
                                        <p class="text-gray-400 text-sm">Local presence with global standards, understanding Australian business needs.</p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-3">
                                    <div class="w-2 h-2 bg-orange-400 rounded-full mt-2"></div>
                                    <div>
                                        <h4 class="text-white font-medium mb-1">Human-Centered Design</h4>
                                        <p class="text-gray-400 text-sm">Psychology insights ensure our software is intuitive and user-friendly.</p>
                                    </div>
                                </div>
                                <div class="flex items-start gap-3">
                                    <div class="w-2 h-2 bg-orange-400 rounded-full mt-2"></div>
                                    <div>
                                        <h4 class="text-white font-medium mb-1">Process Optimization</h4>
                                        <p class="text-gray-400 text-sm">Legal background helps streamline business processes and ensure compliance.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Team Grid -->
        <section class="pb-20 md:pb-28 relative z-10">
            <div class="max-w-6xl mx-auto px-6">
                <div class="text-center mb-16">
                    <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
                        Meet the <span class="bg-gradient-to-r from-orange-400 to-orange-600 bg-clip-text text-transparent">Developers</span>
                    </h2>
                    <p class="text-xl text-gray-300 max-w-3xl mx-auto">
                        Our team brings together diverse expertise to deliver exceptional software solutions.
                    </p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {teamMembers.map((member: any, index: number) => (
                        <article class="group relative">
                            <!-- Card Background -->
                            <div class="absolute inset-0 bg-gradient-to-br from-gray-900/50 to-gray-900/20 rounded-2xl border border-gray-800/50 backdrop-blur-sm transition-all duration-300 group-hover:border-orange-400/30 group-hover:shadow-2xl group-hover:shadow-orange-400/10"></div>
                            
                            <!-- Card Content -->
                            <div class="relative p-8 h-full flex flex-col">
                                <!-- Profile Image -->
                                <div class="mb-6">
