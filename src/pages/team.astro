---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const teamMembers = await getCollection('team');
---

<Layout title="Our Team | SOLARIS">
    <main class="pt-24 min-h-screen bg-black relative overflow-hidden">
        <!-- Background Pattern -->
        <div class="absolute inset-0 opacity-5">
            <div class="absolute top-20 left-10 w-64 h-64 bg-orange-400 rounded-full blur-3xl"></div>
            <div class="absolute bottom-20 right-10 w-96 h-96 bg-orange-600 rounded-full blur-3xl"></div>
        </div>
        
        <!-- Subtle Grid Pattern -->
        <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(circle at 1px 1px, rgba(255,159,67,0.3) 1px, transparent 0); background-size: 60px 60px;"></div>

        <!-- Hero Section -->
        <section class="py-20 md:py-28 relative z-10">
            <div class="max-w-4xl mx-auto px-6 text-center">
                <div class="relative">
                    <!-- Decorative Line -->
                    <div class="absolute left-1/2 transform -translate-x-1/2 -top-8 w-24 h-1 bg-gradient-to-r from-transparent via-orange-400 to-transparent"></div>
                    
                    <h1 class="text-7xl md:text-7xl font-bold text-white mb-6 font-clash-display">
                        Meet Our <span class="text-orange-400">Team</span>
                    </h1>
                    <p class="text-xl text-gray-300 leading-relaxed max-w-3xl mx-auto">
                        <span class="font-bold text-orange-400">Lawyer</span> and <span class="font-bold text-orange-400">psychology graduate</span> turned self-taught programmers, bringing unique perspectives to solve complex business challenges.
                    </p>
                    
                    <!-- Decorative Line -->
                    <div class="mt-8 w-24 h-1 bg-gradient-to-r from-transparent via-orange-400 to-transparent mx-auto"></div>
                </div>
            </div>
        </section>

        <!-- Team Grid -->
        <section class="pb-20 md:pb-28 relative z-10">
            <div class="max-w-5xl mx-auto px-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-16">
                    {teamMembers.map((member, index) => (
                        <article class="group relative">
                            <!-- Card Background -->
                            <div class="absolute inset-0 bg-gradient-to-br from-gray-900/50 to-gray-900/20 rounded-2xl border border-gray-800/50 backdrop-blur-sm transition-all duration-300 group-hover:border-orange-400/30 group-hover:shadow-2xl group-hover:shadow-orange-400/10"></div>
                            
                            <!-- Card Content -->
                            <div class="relative p-8 md:p-10">
                                <!-- Profile Image -->
                                <div class="mb-8">
                                    <div class="w-32 h-32 mx-auto md:mx-0 mb-6 relative">
                                        <!-- Image Ring -->
                                        <div class="absolute -inset-1 bg-gradient-to-r from-orange-400 to-orange-600 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-sm"></div>
                                        <div class="relative">
                                            <Image
                                                src={member.data.image}
                                                alt={member.data.name}
                                                width={128}
                                                height={128}
                                                class="w-full h-full object-cover rounded-full transition-all duration-300 group-hover:scale-105 border-2 border-gray-700 group-hover:border-orange-400"
                                            />
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Content -->
                                <div class="text-center md:text-left">
                                    <div class="mb-4">
                                        <!-- Role Badge -->
                                        <div class="inline-block px-3 py-1 bg-orange-400/10 text-orange-400 text-sm font-medium rounded-full border border-orange-400/20 mb-4">
                                            {member.data.role.split(',')[0]}
                                        </div>
                                    </div>
                                    
                                    <h2 class="text-3xl font-bold text-white mb-2 font-clash-display group-hover:text-orange-400 transition-colors duration-300">
                                        {member.data.name}
                                    </h2>
                                    <p class="text-lg text-orange-400 font-medium mb-6 opacity-80">
                                        {member.data.role.includes(',') ? member.data.role.split(',')[1].trim() : ''}
                                    </p>
                                    <p class="text-gray-300 leading-relaxed text-lg mb-8">
                                        {member.data.bio}
                                    </p>
                                    
                                    <!-- Social Links -->
                                    <div class="flex gap-3 justify-center md:justify-start pt-4 border-t border-gray-800/50">
                                        {member.data.linkedin && (
                                            <a 
                                                href={member.data.linkedin}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="flex items-center gap-2 px-4 py-2 bg-gray-800/50 hover:bg-orange-400/20 text-gray-400 hover:text-orange-400 transition-all duration-200 rounded-lg border border-gray-700 hover:border-orange-400/50"
                                                aria-label={`${member.data.name}'s LinkedIn`}
                                            >
                                                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                                                </svg>
                                                <span class="text-sm font-medium">LinkedIn</span>
                                            </a>
                                        )}
                                        {member.data.twitter && (
                                            <a 
                                                href={member.data.twitter}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="flex items-center gap-2 px-4 py-2 bg-gray-800/50 hover:bg-orange-400/20 text-gray-400 hover:text-orange-400 transition-all duration-200 rounded-lg border border-gray-700 hover:border-orange-400/50"
                                                aria-label={`${member.data.name}'s Twitter`}
                                            >
                                                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                                                </svg>
                                                <span class="text-sm font-medium">Twitter</span>
                                            </a>
                                        )}
                                        {member.data.github !== undefined && (
                                            <a 
                                                href={member.data.github}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="flex items-center gap-2 px-4 py-2 bg-gray-800/50 hover:bg-orange-400/20 text-gray-400 hover:text-orange-400 transition-all duration-200 rounded-lg border border-gray-700 hover:border-orange-400/50"
                                                aria-label={`${member.data.name}'s GitHub`}
                                            >
                                                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                                </svg>
                                                <span class="text-sm font-medium">GitHub</span>
                                            </a>
                                        )}
                                    </div>
                                </div>
                            </div>
                        </article>
                    ))}
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    .font-clash-display {
        font-family: 'Clash Display', sans-serif;
    }
</style>