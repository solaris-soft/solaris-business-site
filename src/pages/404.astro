---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="404 - Page Not Found | SOLARIS">
  <main
    class="relative flex flex-col items-center justify-center py-16 md:py-24 overflow-hidden min-h-screen bg-white"
  >
    <!-- Background Effects -->
    <div
      class="absolute inset-0 overflow-hidden pointer-events-none"
      aria-hidden="true"
    >
      <!-- Subtle gradient overlay -->
      <div
        class="absolute inset-0 bg-gradient-to-br from-orange-50/30 via-transparent to-orange-50/20"
      >
      </div>
      <!-- Subtle pattern overlay -->
      <div class="absolute inset-0 opacity-[0.02]">
        <div
          class="absolute inset-0"
          style="background-image: radial-gradient(circle at 1px 1px, #ff3d00 1px, transparent 0); background-size: 40px 40px;"
        >
        </div>
      </div>
      <!-- Gradient orbs -->
      <div
        class="absolute w-[600px] h-[600px] -top-[300px] -right-[300px] bg-gradient-radial from-orange-500/5 via-transparent to-transparent opacity-40 blur-3xl"
      >
      </div>
      <div
        class="absolute w-[500px] h-[500px] -bottom-[250px] -left-[250px] bg-gradient-radial from-secondary/5 via-transparent to-transparent opacity-30 blur-3xl"
      >
      </div>
    </div>

    <!-- Solar System Animation -->
    <div
      class="absolute inset-0 overflow-hidden pointer-events-none z-0"
      aria-hidden="true"
    >
      <div class="solar-system">
        <div class="sun">
          <!-- Enhanced sun with inner glow -->
          <div
            class="absolute inset-0 bg-gradient-to-br from-orange-500 to-secondary rounded-full animate-mainDot"
          >
            <div
              class="absolute inset-[2px] bg-gradient-to-br from-white/30 to-transparent rounded-full"
            >
            </div>
          </div>
          <!-- Outer glow effect -->
          <div
            class="absolute inset-[-8px] bg-orange-500 rounded-full blur-lg opacity-50 animate-glow"
          >
          </div>
        </div>
        <div class="orbit orbit-1">
          <div class="planet planet-1">
            <div class="absolute inset-[-2px] blur-sm bg-[#3d9eff] opacity-70">
            </div>
          </div>
        </div>
        <div class="orbit orbit-2">
          <div class="planet planet-2">
            <div class="absolute inset-[-2px] blur-sm bg-[#ff5e3d] opacity-70">
            </div>
          </div>
        </div>
      </div>
    </div>

    <div
      class="w-full max-w-7xl flex flex-col items-center justify-center gap-8 relative z-10 px-4 sm:px-6 lg:px-8"
    >
      <!-- Enhanced 404 Text -->
      <h1
        class="text-[clamp(6rem,15vw,12rem)] leading-none font-bold text-center relative"
      >
        <div class="flex items-center justify-center gap-4">
          <span
            class="bg-gradient-to-r from-orange-500 to-secondary bg-clip-text text-transparent animate-slideFromLeft"
            >4</span
          >
          <div class="relative w-[0.8em] h-[0.8em] animate-pulse">
            <div
              class="absolute inset-0 bg-gradient-to-br from-orange-500 to-secondary rounded-full"
            >
              <div
                class="absolute inset-[2px] bg-gradient-to-br from-white/30 to-transparent rounded-full"
              >
              </div>
            </div>
            <div
              class="absolute inset-[-4px] bg-orange-500 rounded-full blur-md opacity-50"
            >
            </div>
          </div>
          <span
            class="bg-gradient-to-r from-orange-500 to-secondary bg-clip-text text-transparent animate-slideFromRight"
            >4</span
          >
        </div>
      </h1>

      <!-- Message -->
      <h2
        class="text-4xl md:text-6xl lg:text-7xl font-display font-bold text-gray-900 text-center opacity-0 animate-fadeIn leading-tight"
      >
        Lost in Space
      </h2>

      <!-- Description -->
      <p
        class="text-[clamp(1rem,1.5vw,1.2rem)] max-w-[44ch] leading-[1.6] text-gray-600 text-center m-0 tracking-[0.01em] relative py-4 opacity-0 animate-slideUp"
      >
        The page you're looking for has drifted beyond our solar system.
        <span
          class="absolute -left-12 top-1/2 w-8 h-px bg-gradient-to-r from-orange-500 to-transparent hidden md:block"
        ></span>
        <span
          class="absolute -right-12 top-1/2 w-8 h-px bg-gradient-to-l from-orange-500 to-transparent hidden md:block"
        ></span>
      </p>

      <!-- Enhanced CTA Button -->
      <a
        href="/"
        class="group relative px-8 md:px-11 py-3 md:py-3.5 text-sm tracking-wider uppercase text-white border-none rounded-full no-underline font-medium z-10 h-11 md:h-12 inline-flex items-center justify-center min-w-[160px] md:min-w-[180px] overflow-hidden opacity-0 animate-slideUp animation-delay-200 bg-gradient-to-r from-orange-500 to-secondary hover:from-secondary hover:to-orange-500 transition-all duration-300 hover:shadow-lg hover:shadow-orange-500/25 hover:scale-105"
      >
        <span class="relative flex items-center gap-2">
          Return Home
          <svg
            class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1"
            viewBox="0 0 24 24"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M4 12H20M20 12L14 6M20 12L14 18"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </span>
      </a>
    </div>
  </main>
</Layout>

<style>
  @keyframes slideFromLeft {
    from {
      transform: translateX(-100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideFromRight {
    from {
      transform: translateX(100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes mainDot {
    0%,
    100% {
      transform: scale(1);
      box-shadow: 0 0 50px 20px rgba(255, 61, 0, 0.7);
    }
    50% {
      transform: scale(0.95);
      box-shadow: 0 0 40px 15px rgba(255, 61, 0, 0.5);
    }
  }

  @keyframes orbit {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes glow {
    0%,
    100% {
      opacity: 0.2;
      transform: scale(1);
    }
    50% {
      opacity: 0.3;
      transform: scale(1.2);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 0.8;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.1);
    }
  }

  .animate-slideFromLeft {
    animation: slideFromLeft 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .animate-slideFromRight {
    animation: slideFromRight 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .animate-slideUp {
    animation: slideUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .animate-fadeIn {
    animation: fadeIn 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.4s forwards;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animate-mainDot {
    animation: mainDot 3s ease-in-out infinite;
  }

  .animate-orbit {
    animation: orbit 8s linear infinite;
  }

  .animate-glow {
    animation: glow 4s ease-in-out infinite;
  }

  .animate-pulse {
    animation: pulse 2s ease-in-out infinite;
  }

  /* Solar system styling */
  .solar-system {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    max-width: 800px;
    max-height: 800px;
  }

  .sun {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 80px;
    height: 80px;
    z-index: 1;
  }

  .orbit {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 1px solid rgba(255, 61, 0, 0.15);
    border-radius: 50%;
  }

  .orbit-1 {
    width: 300px;
    height: 300px;
    animation: orbit 20s linear infinite;
  }

  .orbit-2 {
    width: 500px;
    height: 500px;
    animation: orbit 30s linear infinite;
  }

  .planet {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 50%;
  }

  .planet-1 {
    width: 20px;
    height: 20px;
    background: #3d9eff;
  }

  .planet-2 {
    width: 25px;
    height: 25px;
    background: #ff5e3d;
  }

  /* Ensure smooth animations */
  .animate-mainDot,
  .animate-orbit,
  .animate-glow,
  .animate-pulse {
    will-change: transform, opacity;
    backface-visibility: hidden;
  }
</style>
