---
import Layout from "../layouts/Layout.astro";
import ContactSection from "../components/contact/Contact.astro";
import CalBooking from "../components/contact/CalBooking.svelte";
import { Image } from "astro:assets";
import solarisLogo from "../assets/sun.webp";

const seoDescription =
  "Get in touch with SOLARIS SOFTWARE for your web development needs. Schedule a consultation to discuss custom websites, web applications, or AI integration for your business.";
const seoKeywords =
  "contact Perth web developers, SOLARIS SOFTWARE contact, web development consultation Perth, custom software inquiry, Western Australia web development";
---

<Layout
  title="Contact | Solaris Software"
  description={seoDescription}
  image="/og-contact.jpg"
  keywords={seoKeywords}
>
  <main class="overflow-x-hidden">
    <!-- Hero Section - White Background with geometric elements -->
    <section class="bg-white relative min-h-[70vh] flex items-center">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="max-w-5xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
            <div class="text-left">
              <div class="mb-8" data-speed="auto" data-lag="0.1">
                <h1
                  class="text-6xl md:text-7xl lg:text-8xl font-black leading-none mb-6"
                >
                  Let's<br />
                  <span class="text-[#ff3d00]">Connect</span>
                </h1>
                <p class="text-black/70 text-xl leading-relaxed max-w-lg">
                  Ready to transform your digital presence? We're here to turn
                  your vision into reality.
                </p>
              </div>
            </div>

            <!-- Simple decorative element -->
            <div class="relative lg:block hidden">
              <div class="relative w-full h-96" id="image-container">
                <!-- Background shape -->
                <div
                  class="absolute inset-0 bg-black transform rotate-3 rounded-lg shadow-xl"
                >
                </div>
                <div
                  class="absolute inset-0 bg-[#ff3d00] transform -rotate-3 rounded-lg opacity-90 shadow-lg"
                >
                </div>

                <!-- Main image -->
                <div class="absolute inset-0 z-10 p-4">
                  <Image
                    src={solarisLogo}
                    alt="SOLARIS"
                    width={1000}
                    height={1000}
                    id="hero-image"
                    class="w-full h-full object-cover rounded-xl contrast-200"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Cards Section - Black Background -->
    <section class="bg-black relative py-24">
      <!-- Subtle grid pattern -->
      <div
        class="absolute inset-0 opacity-[0.02]"
        style="background-image: linear-gradient(#ff3d00 1px, transparent 1px), linear-gradient(to right, #ff3d00 1px, transparent 1px); background-size: 40px 40px;"
      >
      </div>

      <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-black text-white mb-4">
              Get In <span class="text-[#ff3d00]">Touch</span>
            </h2>
            <div class="w-20 h-1 bg-[#ff3d00] mx-auto mb-8"></div>

            <!-- Social Links -->
            <div class="flex items-center justify-center gap-6 mt-8">
              <a
                href="https://www.linkedin.com/company/solaris-software"
                class="group relative"
                aria-label="LinkedIn"
                target="_blank"
                rel="noopener noreferrer"
              >
                <div
                  class="relative w-14 h-14 bg-white/10 hover:bg-[#ff3d00] border-2 border-white/20 hover:border-[#ff3d00] rounded-lg flex items-center justify-center transition-all duration-300 transform hover:scale-110 hover:rotate-3"
                >
                  <svg
                    width="24"
                    height="24"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    class="text-white transition-transform duration-300 group-hover:scale-110"
                  >
                    <path
                      d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"
                    ></path>
                  </svg>
                </div>
              </a>

              <a
                href="https://www.facebook.com/people/Solaris-Software/61581656669840/"
                class="group relative"
                aria-label="Facebook"
                target="_blank"
                rel="noopener noreferrer"
              >
                <div
                  class="relative w-14 h-14 bg-white/10 hover:bg-[#ff3d00] border-2 border-white/20 hover:border-[#ff3d00] rounded-lg flex items-center justify-center transition-all duration-300 transform hover:scale-110 hover:-rotate-3"
                >
                  <svg
                    width="24"
                    height="24"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    class="text-white transition-transform duration-300 group-hover:scale-110"
                  >
                    <path
                      d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                    ></path>
                  </svg>
                </div>
              </a>

              <a
                href="https://github.com/solaris-soft/"
                class="group relative"
                aria-label="GitHub"
                target="_blank"
                rel="noopener noreferrer"
              >
                <div
                  class="relative w-14 h-14 bg-white/10 hover:bg-white border-2 border-white/20 hover:border-white rounded-lg flex items-center justify-center transition-all duration-300 transform hover:scale-110 hover:rotate-3"
                >
                  <svg
                    width="24"
                    height="24"
                    fill="currentColor"
                    viewBox="0 0 24 24"
                    class="text-white group-hover:text-black transition-colors duration-300"
                  >
                    <path
                      d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.603-3.369-1.342-3.369-1.342-.454-1.155-1.11-1.462-1.11-1.462-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"
                    ></path>
                  </svg>
                </div>
              </a>
            </div>
          </div>
          <ContactSection />
        </div>
      </div>
    </section>

    <!-- Calendar Section - White Background -->
    <section class="bg-white relative py-24">
      <!-- Geometric accent -->
      <div
        class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-black via-[#ff3d00] to-black"
      >
      </div>

      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-16 mb-16">
            <div class="lg:col-span-2">
              <h2 class="text-5xl md:text-6xl font-black text-black mb-6">
                Schedule a<br />
                <span class="text-[#ff3d00]">Meeting</span>
              </h2>
              <p class="text-black/70 text-xl leading-relaxed">
                Choose a time that works for you. We'll discuss your project,
                goals, and how we can help bring your vision to life.
              </p>
            </div>
            <div class="flex flex-col space-y-6">
              <div class="bg-black text-white p-6">
                <div class="text-2xl font-bold mb-2">30 min</div>
                <div class="text-sm text-white/70">Initial consultation</div>
              </div>
              <div class="bg-[#ff3d00] text-white p-6">
                <div class="text-2xl font-bold mb-2">Free</div>
                <div class="text-sm text-white/70">No cost, no commitment</div>
              </div>
            </div>
          </div>
          <div class="bg-white border border-black/5 p-8 lg:p-12">
            <CalBooking client:load />
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
<script>
  import { gsap } from "gsap";

  document.addEventListener("DOMContentLoaded", () => {
    const heroImage = document.getElementById("hero-image");
    const imageContainer = document.getElementById("image-container");

    if (!heroImage || !imageContainer) return;

    // Simple hover effect
    imageContainer.addEventListener("mouseenter", () => {
      gsap.to(heroImage, {
        duration: 0.3,
        scale: 1.05,
        ease: "power2.out",
      });
    });

    imageContainer.addEventListener("mouseleave", () => {
      gsap.to(heroImage, {
        duration: 0.3,
        scale: 1,
        ease: "power2.out",
      });
    });
  });
</script>
<style>
  /* Simple, clean styling */
  #image-container {
    transition: transform 0.3s ease;
  }

  #hero-image {
    transition: transform 0.3s ease;
    filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.2));
  }

  #image-container:hover {
    cursor: pointer;
  }

  /* Page animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  section {
    animation: fadeInUp 0.8s ease-out;
  }

  h1,
  h2 {
    animation: slideInLeft 1s ease-out;
  }
</style>
