---
import Layout from "@/layouts/Layout.astro";
import { getCollection } from "astro:content";
import ServiceHero from "@/components/services/ServiceHero.svelte";
import ServiceCardDetailed from "@/components/services/ServiceCardDetailed.svelte";
import PackagesSection from "@/components/packages/PackagesSection.svelte";

const services = await getCollection("services");
const seoDescription =
  "Explore Solaris Software's comprehensive web services including custom development, AI integration, modern UI/UX design, and business automation solutions.";
const seoKeywords =
  "web development services, custom software development, AI integration, UI/UX design, business automation, Perth developers, Western Australia, MVP development, Fortix configuration, CMS, e-commerce solutions";
---

<Layout
  title="Services | Solaris Software"
  description={seoDescription}
  image="/og-services.jpg"
  type="service"
  keywords={seoKeywords}
  category="Web Development Services"
>
  <main
    class="min-h-screen bg-white relative z-10 overflow-hidden pt-16 sm:pt-32"
  >
    <!-- Background effects -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <!-- Enhanced gradient background -->
      <div
        class="absolute w-[120%] h-[120%] -left-[10%] -top-[10%] bg-gradient-radial from-[#ff3d00]/5 via-transparent to-transparent opacity-30 blur-3xl"
      >
      </div>
      <!-- Animated accent lines -->
      <div class="absolute inset-0 opacity-20">
        <div
          class="absolute w-full h-px top-1/3 left-0 bg-gradient-to-r from-transparent via-[#ff3d00]/10 to-transparent transform -translate-y-1/2"
        >
        </div>
        <div
          class="absolute w-full h-px top-2/3 left-0 bg-gradient-to-r from-transparent via-[#ff3d00]/10 to-transparent transform -translate-y-1/2"
        >
        </div>
      </div>
    </div>

    <!-- Hero Section -->
    <ServiceHero client:load />

    <!-- Services Grid -->
    <section
      class="relative container mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32"
    >
      <!-- Section Title -->
      <div class="text-center mb-20">
        <h2
          class="text-3xl lg:text-4xl font-bold mb-6 bg-gradient-to-r from-black to-black/80 bg-clip-text text-transparent"
        >
          Our Comprehensive Services
        </h2>
        <p class="text-lg text-black max-w-2xl mx-auto leading-relaxed">
          We offer a wide range of digital solutions to help your business grow
          and succeed in the modern digital landscape.
        </p>
      </div>

      <!-- Enhanced Services Grid -->
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12 py-24 relative"
        style="overflow: visible;"
      >
        {
          services.map((service, index) => (
            <div
              class="opacity-0 translate-y-8 transition-all duration-700 relative"
              style={`transition-delay: ${index * 150}ms; overflow: visible;`}
              data-scroll-reveal
            >
              <ServiceCardDetailed
                client:visible
                title={service.data.title}
                description={service.data.description}
                features={service.data.features}
              />
            </div>
          ))
        }
      </div>

      <!-- Bottom CTA Section -->
      <div class="mt-24 text-center">
        <div class="max-w-3xl mx-auto px-4">
          <h3
            class="text-2xl lg:text-3xl font-bold mb-6 bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent"
          >
            Ready to Transform Your Business?
          </h3>
          <p class="text-lg text-gray-600 mb-8 leading-relaxed">
            Let's discuss how our services can help you achieve your business
            goals and create lasting digital success.
          </p>
          <a
            href="/contact/"
            class="inline-flex items-center gap-2 px-8 py-4 bg-gradient-to-r from-[#ff3d00] to-[#ff8a00] rounded-full text-white font-medium hover:shadow-lg hover:shadow-[#ff3d00]/20 transition-all duration-300 hover:scale-105"
          >
            Get Started
            <svg class="w-5 h-5" viewBox="0 0 20 20" fill="none">
              <path
                d="M4 10h12m0 0l-4-4m4 4l-4 4"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Packages Section -->
    <PackagesSection client:visible />
  </main>

  <!-- Additional CTA Section if needed -->
  <section class="bg-white py-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-4">
        Have Questions About Our Services?
      </h3>
      <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
        We're here to help you choose the right solution for your business
        needs.
      </p>
      <a
        href="/contact/"
        class="inline-flex items-center gap-2 px-6 py-3 border-2 border-[#ff3d00] text-[#ff3d00] rounded-full font-medium hover:bg-[#ff3d00] hover:text-white transition-all duration-300"
      >
        Contact Us
        <svg class="w-4 h-4" viewBox="0 0 20 20" fill="none">
          <path
            d="M4 10h12m0 0l-4-4m4 4l-4 4"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </a>
    </div>
  </section>
</Layout>

<script>
  // Enhanced Intersection Observer for scroll reveal
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.remove("opacity-0", "translate-y-8");
          observer.unobserve(entry.target);
        }
      });
    },
    {
      threshold: 0.2,
      rootMargin: "50px",
    },
  );

  // Observe all elements with data-scroll-reveal attribute
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll("[data-scroll-reveal]").forEach((el) => {
      observer.observe(el);
    });
  });
</script>
