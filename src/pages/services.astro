---
import Layout from "@/layouts/Layout.astro";
import ServiceHero from "@/components/services/ServiceHero.svelte";
import { getCollection } from "astro:content";

const servicePages = await getCollection(
  "servicePages",
  ({ data }) => !data.draft,
);

servicePages.sort((a, b) => {
  if (a.data.order !== undefined && b.data.order !== undefined) {
    return a.data.order - b.data.order;
  }
  if (a.data.order !== undefined) return -1;
  if (b.data.order !== undefined) return 1;
  return a.data.title.localeCompare(b.data.title);
});
const seoDescription =
  "Explore Solaris Software's comprehensive web services including custom development, AI integration, modern UI/UX design, and business automation solutions.";
const seoKeywords =
  "web development services, custom software development, AI integration, UI/UX design, business automation, Perth developers, Western Australia, MVP development, Fortix configuration, CMS, e-commerce solutions";
---

<Layout
  title="Services | Solaris Software"
  description={seoDescription}
  image="/og-services.jpg"
  type="service"
  keywords={seoKeywords}
  category="Web Development Services"
>
  <div
    class="min-h-screen bg-white relative z-10 overflow-hidden pt-16 sm:pt-24"
  >
    <!-- Hero Section -->
    <ServiceHero client:load />

    <!-- Services Grid -->
    <section
      class="relative container mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-20"
    >
      <!-- Section Title -->
      <div class="text-center mb-12">
        <h2
          class="text-3xl lg:text-4xl font-bold mb-6 bg-gradient-to-r from-black to-black/80 bg-clip-text text-transparent"
        >
          Our Comprehensive Services
        </h2>
        <p class="text-lg text-black max-w-2xl mx-auto leading-relaxed">
          We offer a wide range of digital solutions to help your business grow
          and succeed in the modern digital landscape.
        </p>
      </div>

      <!-- Services Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
        {
          servicePages.map((service) => (
            <a
              href={`/services/${service.slug}/`}
              class="group relative rounded-3xl bg-white p-8 hover:shadow-lg transition-all duration-300"
            >
              <div class="flex items-center justify-between mb-6">
                <h3 class="text-2xl font-bold text-gray-900 group-hover:text-orange-600 transition-colors">
                  {service.data.title}
                </h3>
                <span class="inline-flex items-center justify-center rounded-full border border-orange-200 bg-orange-50 px-3 py-1 text-xs font-semibold text-orange-600">
                  Learn more
                </span>
              </div>
              <p class="text-gray-600 leading-relaxed mb-6">
                {service.data.summary || service.data.description}
              </p>
              <div class="flex items-center gap-2 text-sm font-semibold text-gray-900 group-hover:text-orange-600 transition-colors">
                View service details
                <svg class="w-4 h-4" viewBox="0 0 20 20" fill="none">
                  <path
                    d="M4 10h12m0 0l-4-4m4 4l-4 4"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </div>
            </a>
          ))
        }
      </div>

    </section>

    <!-- CTA Section -->
    <section class="py-12 md:py-16 border-t border-gray-100">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h3
          class="text-2xl lg:text-3xl font-bold mb-4 text-gray-900"
        >
          Ready to Transform Your Business?
        </h3>
        <p class="text-lg text-gray-600 mb-8 leading-relaxed">
          Let's discuss how our services can help you achieve your goals.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/contact/"
            class="inline-flex items-center justify-center gap-2 px-8 py-4 bg-orange-500 text-white font-semibold rounded-full hover:bg-orange-600 transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            Get Started
            <svg class="w-5 h-5" viewBox="0 0 20 20" fill="none">
              <path
                d="M4 10h12m0 0l-4-4m4 4l-4 4"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            </svg>
          </a>
        </div>
      </div>
    </section>
  </div>

  <script>
    // Enhanced Intersection Observer for scroll reveal
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.remove("opacity-0", "translate-y-8");
            observer.unobserve(entry.target);
          }
        });
      },
      {
        threshold: 0.2,
        rootMargin: "50px",
      }
    );

    // Observe all elements with data-scroll-reveal attribute
    document.addEventListener("DOMContentLoaded", () => {
      document.querySelectorAll("[data-scroll-reveal]").forEach((el) => {
        observer.observe(el);
      });
    });
  </script>
</Layout>
