---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout>
	<main>

<div class="container">
  <nav class="nav" aria-label="Main navigation">
    <div class="sun-logo" role="button" tabindex="0" aria-label="Toggle menu">
      <div class="sun" aria-hidden="true"></div>
    </div>
    <div class="menu" role="menu">
      <a href="#philosophy" class="menu-item" role="menuitem">PHILOSOPHY</a>
      <a href="#work" class="menu-item" role="menuitem">WORK</a>
      <a href="#services" class="menu-item" role="menuitem">SERVICES</a>
      <a href="#contact" class="menu-item" role="menuitem">CONTACT</a>
    </div>
  </nav>

  <header class="hero">
    <div class="hero-content">
      <h1>SOL<span class="gradient-text">ARIS</span></h1>
      <div class="hero-line" aria-hidden="true"></div>
      <p class="manifesto">
        We craft digital experiences that embrace human connection in the
        technological age.
      </p>
      <a href="#contact" class="cta-button">Start Your Project</a>
    </div>
    <div class="coordinates" aria-hidden="true">34°02'N 118°12'W</div>
  </header>

  <section id="services" class="services" aria-labelledby="services-title">
    <h2 id="services-title" class="section-title">Our Services</h2>
    <div class="service-grid">
      <div class="service-item" tabindex="0">
        <span class="service-number" aria-hidden="true">001</span>
        <div class="service-content">
          <h3>HUMAN INTERFACE</h3>
          <p>
            Digital products that feel natural and intuitive, designed with
            accessibility in mind.
          </p>
        </div>
      </div>
      <div class="service-item" tabindex="0">
        <span class="service-number" aria-hidden="true">002</span>
        <div class="service-content">
          <h3>DIGITAL CRAFT</h3>
          <p>
            Precision in every pixel, ensuring beautiful and functional
            experiences across all devices.
          </p>
        </div>
      </div>
      <div class="service-item" tabindex="0">
        <span class="service-number" aria-hidden="true">003</span>
        <div class="service-content">
          <h3>BRAND ESSENCE</h3>
          <p>
            Identity through simplicity, creating memorable and impactful brand
            experiences.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="contact" class="contact" aria-labelledby="contact-title">
    <h2 id="contact-title" class="section-title">Get in Touch</h2>
    <div class="contact-container">
      <div class="contact-info">
        <h3>Let's Create Something Amazing</h3>
        <p>
          Ready to transform your digital presence? We're here to help bring
          your vision to life.
        </p>
        <div class="contact-details">
          <a href="mailto:admin@solaris.software" class="contact-link"
            >admin@solaris.software</a
          >
          <a href="tel:0415267117" class="contact-link">0415267117</a>
          <a href="tel:0415267117" class="contact-link">0415267117</a>
        </div>
      </div>
      <ContactForm />
    </div>
  </section>
</div>


	</main>
</Layout>

<style>
  .container {
    display: grid;
    grid-template-columns: 120px 1fr;
    min-height: 100vh;
    color: white;
    padding: 2rem;
    gap: 4rem;
    max-width: 1440px;
    margin: 0 auto;
  }

  .nav {
    position: fixed;
    height: calc(100vh - 4rem);
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding: 2rem 0;
    z-index: 100;
  }

  .sun-logo {
    width: 80px;
    height: 80px;
    display: grid;
    place-items: center;
    position: relative;
    cursor: pointer;
    z-index: 2;
  }

  .sun {
    width: 40px;
    height: 40px;
    background: #ff3d00;
    border-radius: 50%;
    position: relative;
    box-shadow: 0 0 50px rgba(255, 61, 0, 0.2);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sun::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 40px;
    height: 40px;
    background: transparent;
    border: 2px solid #ff3d00;
    border-radius: 50%;
    opacity: 0.3;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sun::after {
    content: "";
    position: absolute;
    inset: -15px;
    background: conic-gradient(
      from 0deg,
      #ff3d00 0%,
      transparent 60%,
      transparent 100%
    );
    border-radius: 50%;
    opacity: 0.3;
    transform-origin: center;
    animation: gentleRotate 8s linear infinite;
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav:hover .sun {
    transform: scale(0.95);
    box-shadow: 0 0 30px rgba(255, 61, 0, 0.4);
  }

  .nav:hover .sun::before {
    width: 55px;
    height: 55px;
    opacity: 0.6;
    border-width: 3px;
  }

  .nav:hover .sun::after {
    opacity: 0.8;
    inset: -20px;
  }

  .menu {
    position: fixed;
    left: 0;
    top: 0;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1.5rem;
    padding-left: 2rem;
    width: 250px;
    background: linear-gradient(to right, rgba(0, 0, 0, 0.97) 80%, transparent);
    transform: translateX(-100%);
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1;
    backdrop-filter: blur(10px);
    opacity: 0;
  }

  .nav:hover .menu {
    transform: translateX(0);
    opacity: 1;
  }

  .menu-item {
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    font-size: 0.875rem;
    letter-spacing: 0.2em;
    transition: all 0.4s ease;
    font-weight: 500;
    position: relative;
    padding-left: 0;
    transform: translateX(-10px);
  }

  .menu-item::before {
    content: "";
    position: absolute;
    left: -20px;
    top: 50%;
    width: 0;
    height: 1px;
    background: #ff3d00;
    transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .nav:hover .menu-item {
    transform: translateX(0);
    transition-delay: 0.2s;
  }

  .menu-item:hover {
    color: #fff;
    padding-left: 1rem;
  }

  .menu-item:hover::before {
    width: 1.5rem;
  }

  @keyframes gentleRotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* Remove old animations */
  @keyframes pulseHint {
    0%,
    100% {
      transform: scale(1);
    }
  }

  @keyframes arrowHint {
    0%,
    100% {
      opacity: 0;
      transform: translateX(0);
    }
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(0);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .hero {
    grid-column: 2;
    height: 90vh;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  .hero-content {
    max-width: 90%;
  }

  h1 {
    font-size: clamp(5rem, 20vw, 14rem);
    font-weight: 900;
    line-height: 0.8;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .gradient-text {
    background: linear-gradient(90deg, #ff3d00, #ff8a00);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-line {
    width: 150px;
    height: 4px;
    background: #ff3d00;
    margin: 2rem 0;
  }

  .manifesto {
    font-size: clamp(1rem, 2vw, 1.5rem);
    max-width: 600px;
    line-height: 1.4;
    color: #888;
  }

  .coordinates {
    writing-mode: vertical-rl;
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    color: #444;
    font-family: monospace;
  }

  .services {
    grid-column: 2;
    padding: 4rem 0;
  }

  .service-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .service-item {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .service-item:hover,
  .service-item:focus {
    background: rgba(255, 61, 0, 0.1);
    transform: translateY(-5px);
    border-color: #ff3d00;
  }

  .service-item:focus {
    outline: none;
    box-shadow: 0 0 0 2px #ff3d00;
  }

  .service-number {
    font-family: monospace;
    color: #ff3d00;
    font-size: 0.875rem;
  }

  .service-content h2 {
    font-size: 1.5rem;
    margin: 0 0 0.5rem 0;
    font-weight: 700;
  }

  .service-content p {
    color: #666;
    font-size: 0.875rem;
    margin: 0;
  }

  .cta-button {
    display: inline-block;
    background: linear-gradient(90deg, #ff3d00, #ff8a00);
    color: white;
    padding: 1rem 2rem;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 500;
    margin-top: 2rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .cta-button:hover,
  .cta-button:focus {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(255, 61, 0, 0.2);
  }

  .contact {
    grid-column: 2;
    padding: 4rem 0;
  }

  .contact-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 20px;
    padding: 3rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-info h3 {
    font-size: 2rem;
    margin: 0;
  }

  .contact-info p {
    color: #888;
    font-size: 1.1rem;
    line-height: 1.6;
    margin: 0;
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }

  .contact-link {
    color: #ff3d00;
    text-decoration: none;
    font-size: 1.1rem;
    transition: color 0.3s ease;
  }

  .contact-link:hover {
    color: #ff8a00;
  }

  @media (max-width: 1024px) {
    .contact-container {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .container {
      grid-template-columns: 1fr;
      gap: 2rem;
      padding: 1rem;
    }

    .nav {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: auto;
      padding: 1rem;
      background: rgba(0, 0, 0, 0.9);
      backdrop-filter: blur(10px);
    }

    .menu {
      position: fixed;
      top: 80px;
      left: 0;
      width: 100%;
      height: auto;
      background: rgba(0, 0, 0, 0.95);
      padding: 1rem;
      transform: translateY(-100%);
      flex-direction: column;
      align-items: center;
    }

    .nav:hover .menu {
      transform: translateY(0);
    }

    .hero,
    .services,
    .contact {
      grid-column: 1;
      padding: 2rem 0;
    }

    .hero {
      margin-top: 80px;
    }

    .service-grid {
      grid-template-columns: 1fr;
    }
  }

  a:focus,
  button:focus {
    outline: 2px solid #ff3d00;
    outline-offset: 4px;
  }

  .menu-item {
    opacity: 1;
    transform: none;
  }

  .nav:hover .menu-item {
    animation: slideIn 0.3s ease forwards;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  h1,
  h2,
  h3 {
    line-height: 1.2;
    font-weight: 700;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: 2rem;
    background: linear-gradient(90deg, #ff3d00, #ff8a00);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    opacity: 0.9;
  }
	main {
		min-height: 100vh;
		background: #000000;
		position: relative;
		z-index: 1;
	}
	</style>
