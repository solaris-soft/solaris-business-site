---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/hero/Hero.svelte";
import HomeAbout from "../components/about/HomeAbout.svelte";
import HowWeWork from "../components/about/HowWeWork.svelte";
import PackagesSection from "../components/packages/PackagesSection.svelte";
import Services from "../components/services/Services.astro";

const seoDescription =
  "Solaris Software specialises in creating modern, high-performance web solutions and custom software development. Bespoke software tailored to your business needs.";
const seoKeywords =
  "web development Perth, custom software development, AI integration, business websites, UI design, Western Australia web developers, Perth developers, custom web applications, business automation, business analysis, CRM";
---

<Layout
  title="SOLARIS SOFTWARE | Bespoke. Crafted. Custom."
  description={seoDescription}
  image="/og-home.jpg"
  keywords={seoKeywords}
>
  <main class="bg-black relative z-10 overflow-x-hidden">
    <Hero client:load />
    <Services />
    <HowWeWork client:load />
    <PackagesSection client:visible />
  </main>
</Layout>
