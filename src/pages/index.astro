---
import Layout from '../layouts/Layout.astro';
import MainContent from '../components/MainContent.astro';
---

<Layout>
	<div class="noise"></div>
	<main>
		<MainContent />
	</main>
</Layout>

<style>
	main {
		min-height: 100vh;
		background: #000000;
		position: relative;
		z-index: 1;
	}

	.noise {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: url('/noise.png');
		opacity: 0.05;
		pointer-events: none;
		z-index: 2;
	}
</style>
