---
import Layout from "@/layouts/Layout.astro";
import { sections } from "@/data/terms";
---

<Layout
  title="TOS | Solaris Software"
  description="Read Solaris Software's terms of service for web development projects. Clear terms and conditions for our custom software development services in Perth, Western Australia."
  keywords="terms of service, web development terms, SOLARIS SOFTWARE legal, Perth software development terms"
  category="Legal"
>
  <div class="min-h-screen bg-white">
    <!-- Header Section -->
    <section class="pt-32 pb-20 bg-white">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center space-y-6">
          <h1 class="text-5xl md:text-7xl font-black text-gray-900 tracking-tight">
            Terms of <span class="text-orange-500">Service</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
            Please review our terms of service carefully. These terms govern the
            relationship between Solaris Systems Pty Ltd (trading as Solaris
            Software) and our clients.
          </p>
        </div>
      </div>
    </section>

    <!-- Terms Sections -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 space-y-10">
        {
          sections.map((section, index) => (
            <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
              <h2 class="text-xl font-bold mb-4 text-gray-900">
                <span class="text-orange-500 mr-2">{index + 1}.</span>
                {section.title}
              </h2>
              <p class="text-gray-600 leading-relaxed">{section.content}</p>
            </div>
          ))
        }
      </div>
    </section>
  </div>
</Layout>

