---
interface Props {
    id: string;
    title: string;
}

const { id, title } = Astro.props;
---

<h2 class="text-lg tracking-widest text-white/70 font-medium m-0 mb-6 flex items-center gap-4 before:content-[''] before:block before:w-8 before:h-px before:bg-[#ff3d00] animate-heading animate-line" id={id}>
    {title}
</h2>

<style>
@keyframes lineHighlight {
    0%, 100% {
        opacity: 1;
        box-shadow: 0 0 0 rgba(255, 61, 0, 0);
        transform: scaleX(1);
    }
    50% {
        opacity: 1;
        box-shadow: 0 0 25px rgba(255, 61, 0, 0.8);
        transform: scaleX(1.3);
    }
}

@keyframes textHighlight {
    0%, 100% {
        color: rgba(255, 255, 255, 0.7);
        transform: scale(1);
    }
    50% {
        color: rgba(255, 61, 0, 1);
        transform: scale(1.05);
        text-shadow: 0 0 20px rgba(255, 61, 0, 0.4);
    }
}

.animate-heading {
    animation: textHighlight 1.5s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: left;
}

.animate-line::before {
    animation: lineHighlight 1.5s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
}
</style> 