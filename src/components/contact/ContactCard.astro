---
interface Props {
    href?: string;
    label: string;
    children: any;
}

const { href, label } = Astro.props;

const Component = href ? 'a' : 'div';
---

<Component
    href={href}
    class="group bg-gradient-to-br from-white/[0.02] via-transparent to-transparent border-0 rounded-2xl p-8 transition-all duration-300 hover:translate-x-1 no-underline relative overflow-hidden backdrop-blur-sm"
>
    <div class="absolute inset-[1px] rounded-2xl bg-gradient-to-br from-white/[0.08] to-transparent opacity-50"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-[#ff3d00]/0 to-transparent opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
    <div class="relative">
        <span class="block text-[#ff3d00] text-xs uppercase tracking-widest mb-2 group-hover:text-[#ff8a00] transition-colors duration-300">{label}</span>
        <slot />
    </div>
</Component> 