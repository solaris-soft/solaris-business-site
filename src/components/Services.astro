<section id="services" class="services">
    <div class="service">
        <span class="number">01</span>
        <h2>DIGITAL STRATEGY</h2>
        <div class="service-line"></div>
    </div>
    <div class="service">
        <span class="number">02</span>
        <h2>WEB DEVELOPMENT</h2>
        <div class="service-line"></div>
    </div>
    <div class="service">
        <span class="number">03</span>
