---
interface Props {
  title: string;
  description: string;
  id: string;
}

const { title, description, id } = Astro.props;

// Map service IDs to their respective icons
const serviceIcons = {
  "web-development": `<path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />`,
  "business-automation": `<path d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />`,
  "ui-ux": `<path d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`,
  branding: `<path d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />`,
  consulting: `<path d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />`,
  mvp: `<path d="M13 10V3L4 14h7v7l9-11h-7z" />`,
};
---

<div class="group relative">
  <div
    class="service-card bg-gradient-to-br from-black/90 to-black/80 rounded-2xl p-8 backdrop-blur-xl border border-white/10 hover:border-[#ff3d00]/50 transition-all duration-500"
  >
    <div class="flex items-start gap-6">
      <!-- Icon -->
      <div
        class="flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br from-[#ff3d00] to-[#ff8a00] p-3 group-hover:scale-110 transition-transform duration-500"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-full h-full text-black"
        >
          <Fragment set:html={serviceIcons[id]} />
        </svg>
      </div>

      <!-- Content -->
      <div class="flex-1 space-y-3">
        <h3
          class="text-xl font-bold text-white group-hover:text-[#ff3d00] transition-colors duration-300"
        >
          {title}
        </h3>
        <p class="text-white/70 leading-relaxed">
          {description}
        </p>

        <!-- Action button -->
        <div
          class="inline-flex items-center gap-2 text-[#ff3d00] pt-4 group-hover:translate-x-2 transition-transform duration-300"
        >
          <span class="text-sm font-semibold">Explore Service</span>
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none">
            <path
              d="M4 12H20M20 12L14 6M20 12L14 18"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Hover effect -->
  <div
    class="absolute inset-0 -z-10 bg-gradient-to-r from-[#ff3d00] to-[#ff8a00] opacity-0 group-hover:opacity-20 blur-xl transition-opacity duration-500 rounded-2xl"
  >
  </div>
</div>

