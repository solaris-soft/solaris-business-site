---
interface Props {
    title: string;
    description: string;
}

const { title, description } = Astro.props;
---

<div class="group bg-gradient-to-br from-white/[0.02] via-transparent to-transparent border-0 rounded-2xl p-8 transition-all duration-500 hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-[#ff3d00] relative overflow-hidden backdrop-blur-sm" tabindex="0">
    <div class="absolute inset-[1px] rounded-2xl bg-gradient-to-br from-white/[0.08] to-transparent opacity-50"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-[#ff3d00]/0 to-transparent opacity-0 group-hover:opacity-10 transition-opacity duration-500"></div>
    <div class="relative">
        <h3 class="text-base m-0 mb-4 tracking-widest text-[#ff3d00] group-hover:text-[#ff8a00] transition-colors duration-300">{title}</h3>
        <p class="text-white/70 text-base leading-relaxed m-0 transition-colors duration-300 group-hover:text-white/90">{description}</p>
    </div>
</div> 