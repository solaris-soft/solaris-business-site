---
import ServiceCard from "./ServiceCard.svelte";
interface Service {
  title: string;
  description: string;
}

const services: Service[] = [
  {
    title: "PROFESSIONAL WEBSITES",
    description:
      "We build websites that look great and are functional. We do simple company sites to full fledged e-commerce sites.",
  },
  {
    title: "AUTOMATIONS",
    description:
      "We can create systems so that your business can run more efficiently, saving you money and time. This can be through custom solutions or through third party tools.",
  },
  {
    title: "BRANDING IDENTITY",
    description:
      "We help refine your message and build a clear, memorable digital presence that connects with your audience.",
  },
];
---

<section
  id="services"
  class="relative w-full scroll-mt-16 pt-10 overflow-hidden"
>
  <!-- Background effects -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div
      class="absolute w-[120%] h-[120%] -left-[10%] -top-[10%] bg-gradient-radial from-[#ff3d00]/5 via-transparent to-transparent opacity-30 blur-3xl"
    >
    </div>
    <div
      class="absolute w-full h-px top-1/2 left-0 bg-gradient-to-r from-transparent via-[#ff3d00]/10 to-transparent"
    >
    </div>
  </div>

  <div class="relative w-full">
    <div class="text-center mb-16 px-4">
      <h2
        class="text-2xl lg:text-3xl font-semibold tracking-wider text-orange-200/90 mb-4"
      >
        WHAT WE DELIVER
      </h2>
      <p class="text-xl text-white/60 max-w-2xl mx-auto">
        Transforming business challenges into elegant digital solutions
      </p>
    </div>

    <div
      class="grid gap-12 md:gap-16 grid-cols-1 md:grid-cols-2 lg:grid-cols-3 px-4 md:px-8"
    >
      {
        services.map((service: Service) => (
          <div class="relative">
            <ServiceCard
              client:visible
              title={service.title}
              description={service.description}
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
