---
import ServiceCard from './ServiceCard.astro';
import SectionHeading from '../ui/SectionHeading.astro';

interface Service {
    title: string;
    description: string;
}

const services: Service[] = [
    {
        title: 'PROFESSIONAL WEBSITES',
        description: 'We build professional, user-friendly websites tailored to your business needs, helping you stand out and drive sales.'
    },
    {
        title: 'HUMAN-CENTRED DESIGN',
        description: 'We create intuitive designs considering how people think and interact, making your website easy to use.'
    },
    {
        title: 'MEMORABLE BRANDING',
        description: 'We help refine your message and build a clear, memorable digital presence that connects with your audience.'
    }
];
---

<section id="services" class="relative w-full py-24 scroll-mt-16 overflow-hidden">
    <!-- Background effects -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute w-[120%] h-[120%] -left-[10%] -top-[10%] bg-gradient-radial from-[#ff3d00]/5 via-transparent to-transparent opacity-30 blur-3xl"></div>
        <div class="absolute w-full h-px top-1/2 left-0 bg-gradient-to-r from-transparent via-[#ff3d00]/10 to-transparent"></div>
    </div>

    <div class="relative w-full">
        <SectionHeading 
            id="services-heading" 
            title="OUR SERVICES & APPROACH"
        />
        
        <div class="grid gap-8 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
            {services.map((service: Service) => (
                <ServiceCard title={service.title} description={service.description} />
            ))}
        </div>
    </div>
</section> 