// Services section component
---

<section class="bg-black text-white py-28 my-12 px-6 relative overflow-hidden">
  <!-- Background accent lines -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-1/4 left-0 w-32 h-px bg-primary"></div>
    <div class="absolute top-1/2 right-0 w-48 h-px bg-primary"></div>
    <div class="absolute bottom-1/4 left-1/4 w-24 h-px bg-primary"></div>
  </div>

  <div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="grid grid-cols-12 gap-8 mb-20">
      <div class="col-span-12 lg:col-span-6">
        <h2
          class="font-display text-5xl lg:text-6xl mb-6 leading-tight"
          data-speed="auto"
          data-lag="0.1"
        >
          What We <span class="text-primary">Do</span>
        </h2>
      </div>
      <div class="col-span-12 lg:col-span-6 flex items-end">
        <div class="w-16 h-px bg-primary mb-4"></div>
      </div>
    </div>

    <!-- Main content grid -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
      <!-- Left column - Main description -->
      <div class="lg:col-span-7 space-y-8">
        <div
          class="text-xl lg:text-2xl leading-relaxed text-gray-300 font-body"
        >
          We design and build completely custom digital solutions â€” ranging from
          <span class="text-primary font-medium">e-commerce apps</span> and
          <span class="text-primary font-medium">full-stack platforms</span> to
          <span class="text-primary font-medium">AI tools</span> and
          <span class="text-primary font-medium">bespoke company websites</span
          >.
        </div>

        <div class="text-lg leading-relaxed text-gray-400 font-body">
          Unlike template-based providers, every project we create is built from
          the ground up to fit your exact needs.
        </div>
      </div>
    </div>

    <!-- Bottom accent -->
    <div class="mt-20 flex items-center gap-4">
      <div class="w-24 h-px bg-primary"></div>
      <div class="text-sm text-gray-500 font-mono tracking-wider">
        CUSTOM SOLUTIONS
      </div>
    </div>
  </div>
</section>
